#ifndef INTERFACESET_H
#define INTERFACESET_H

#include <vector>
#include <pthread.h>

#include "DataInterface.h"

namespace SKLib
{    typedef std::multimap< int,DataInterface *,less<int> > NPortDI;
     class InterfaceSet
	  {
	  public:
	       InterfaceSet();
	       virtual ~InterfaceSet();
	       
	       virtual DataInterface *getInterfaceForApp(int num, int code, bool isFreq = false) = 0;
	       void add(int nport, DataInterface *ai);
	       void start() const;
	       void setLog(Log * _log);
	       
	  protected:
              
	       static  NPortDI  mmap;
	       static void* pthreadFunc(void*);
	       static void openAll(const std::string & ipAddr, int nport);
	  };
}

#endif // INTERFACESET_H
